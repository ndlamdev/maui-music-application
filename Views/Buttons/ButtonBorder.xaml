<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Buttons.ButtonBorder"
             xmlns:local ="clr-namespace:maui_music_application.Views.Buttons"
             x:DataType="local:ButtonBorder">
    <Button
        x:Name="Button"
        Text="{Binding Text}"
        Clicked="Button_OnClicked"
        TextColor="{Binding ColorButton}"
        FontSize="{Binding FontSize}"
        FontFamily="CenturyGothic"
        BackgroundColor="{DynamicResource NullBackground}"
        CornerRadius="9999"
        BorderColor="{Binding ColorButton}"
        BorderWidth="1"
        HorizontalOptions="CenterAndExpand"
        Padding="14, 4" />
</ContentView>