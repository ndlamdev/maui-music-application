<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Buttons.ButtonBorderShadow"
             xmlns:local="clr-namespace:maui_music_application.Views.Buttons"
             x:DataType="local:ButtonBorderShadow">
    <Button CornerRadius="9999"
            x:Name="Button"
            Text="{Binding Text}"
            TextColor="{Binding TextColor}"
            FontSize="{Binding FontSize}"
            FontFamily="CenturyGothic"
            FontAttributes="Bold"
            Padding="14, 4"
            BackgroundColor="#06A0B5"
            Clicked="Button_OnClicked">
        <Button.Shadow>
            <Shadow Opacity="0.8">
                <Shadow.Offset>
                    <Point X="0" Y="0" />
                </Shadow.Offset>
                <Shadow.Radius>99999</Shadow.Radius>
                <Shadow.Brush>
                    <Color>#06A0B5</Color>
                </Shadow.Brush>
            </Shadow>
        </Button.Shadow>
    </Button>
</ContentView>