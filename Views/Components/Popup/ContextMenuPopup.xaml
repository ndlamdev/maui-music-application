<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="maui_music_application.Views.Components.Popup.ContextMenuPopup"
    Color="{StaticResource NullBackground}">
    <AbsoluteLayout>
        <Frame
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            BackgroundColor="Transparent">
            <Frame
                CornerRadius="25"
                BackgroundColor="White">
                <VerticalStackLayout
                    x:Name="Menu">
                    <Label Text="Option 1" TextColor="Black" />
                    <Label Text="Option 2" TextColor="Black" />
                    <Label Text="Option 3" TextColor="Black" />
                </VerticalStackLayout>
            </Frame>
        </Frame>
    </AbsoluteLayout>
</toolkit:Popup>