<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Components.Categories.PlaylistMusicLarge">
    <Frame
        x:Name="Frame"
        HeightRequest="85"
        Padding="0">
        <HorizontalStackLayout VerticalOptions="Center">
            <Frame
                x:Name="FrameImage"
                Padding="0"
                Margin="0, 0, 10, 0"
                CornerRadius="15">
                <Image
                    x:Name="Image"
                    HeightRequest="85"
                    WidthRequest="85" />
            </Frame>
            <VerticalStackLayout VerticalOptions="Center">
                <Label
                    x:Name="Label"
                    FontAttributes="Bold"
                    TextColor="White"
                    CharacterSpacing="0.6"
                    FontSize="20" />
                <Label
                    x:Name="SubLabel"
                    FontAttributes="Bold"
                    Text="18 songs"
                    TextColor="{DynamicResource Text2}"
                    FontSize="15" />
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Frame>
</ContentView>