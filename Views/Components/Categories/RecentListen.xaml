<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Components.Categories.RecentListen"
             xmlns:content="clr-namespace:maui_music_application.Views.Components.Categories"
             x:DataType="content:RecentListen">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped" />
    </ContentView.GestureRecognizers>
    <Border
        StrokeThickness="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
        <Image
            Source="{Binding Source}"
            WidthRequest="180"
            Height="180" />
    </Border>
</ContentView>