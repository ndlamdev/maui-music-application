<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Components.Categories.PlaylistMusic">
    <Frame
        x:Name="Frame"
        CornerRadius="12"
        BackgroundColor="#20436369"
        HeightRequest="55"
        Padding="0">
        <HorizontalStackLayout VerticalOptions="Center">
            <Frame
                x:Name="FrameImage"
                Padding="0"
                Margin="0, 0, 10, 0"
                TranslationX="-2"
                CornerRadius="12">
                <Image
                    x:Name="Image"
                    HeightRequest="55"
                    WidthRequest="55" />
            </Frame>
            <Label
                x:Name="Label"
                FontAttributes="Bold"
                TextColor="White"
                FontSize="10"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
    </Frame>
</ContentView>