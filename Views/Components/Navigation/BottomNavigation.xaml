<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:navigation="clr-namespace:maui_music_application.Components.Navigation"
             x:Class="maui_music_application.Components.Navigation.BottomNavigation"
             Padding="0, 0, 0, 20"
             Background="{StaticResource BackgroundFooter}">
    <FlexLayout
        AlignItems="End"
        JustifyContent="SpaceAround">
        <navigation:BottomNavigationItem
            x:Name="ItemHome"
            x:Uid="ItemHome"
            Icon="home.svg"
            Title="Home"
            ColorSelected="{StaticResource Outline}" />
        <navigation:BottomNavigationItem
            x:Name="ItemExplore"
            x:Uid="ItemExplore"
            Icon="search.svg"
            Title="Explore"
            ColorSelected="{StaticResource Outline}" />
        <navigation:BottomNavigationItem
            x:Name="ItemLibrary"
            x:Uid="ItemLibrary"
            Icon="folder.svg"
            Title="Library"
            ColorSelected="{StaticResource Outline}" />
    </FlexLayout>
</ContentView>