<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Pages.MainPage"
             xmlns:navigation="clr-namespace:maui_music_application.Components.Navigation">

    <AbsoluteLayout
        BackgroundColor="{StaticResource Background}">
        <ScrollView
            VerticalScrollBarVisibility="Never"
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            x:Name="Container"
            Margin="0, 0, 0, 100" />
        <navigation:BottomNavigation
            AbsoluteLayout.LayoutFlags="YProportional, WidthProportional"
            AbsoluteLayout.LayoutBounds="0, 1, 1, 200"
            x:Name="BottomNavigation" IconSelected="0" />
    </AbsoluteLayout>
</ContentPage>