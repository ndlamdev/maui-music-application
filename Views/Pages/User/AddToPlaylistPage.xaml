<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Pages.User.AddToPlaylistPage"
             xmlns:layouts="clr-namespace:maui_music_application.Views.Layouts"
             xmlns:buttons="clr-namespace:maui_music_application.Views.Components.Buttons"
             xmlns:forms="clr-namespace:maui_music_application.Views.Components.Form">
    <Grid
        Padding="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Margin="0,0,0,20">
            <FlexLayout
                AlignItems="Center"
                JustifyContent="SpaceBetween"
                Margin="0,0,0,25">
                <Frame
                    CornerRadius="99999"
                    Padding="5"
                    WidthRequest="40"
                    HeightRequest="40">
                    <Image
                        Source="arrow_left_white.svg"
                        WidthRequest="30"
                        HeightRequest="30">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBack" />
                        </Image.GestureRecognizers>
                    </Image>
                </Frame>
                <Label
                    Text="Add to Playlist"
                    FontSize="20" />
                <Frame
                    CornerRadius="99999"
                    Padding="5"
                    WidthRequest="40"
                    HeightRequest="40" />
            </FlexLayout>

            <FlexLayout
                Margin="0,0,0,20"
                JustifyContent="Center">
                <buttons:ButtonBorderShadow
                    FlexLayout.Basis="60%"
                    Text="New Playlist"
                    Clicked="NewPlaylist_Clicked" />
            </FlexLayout>

            <forms:Search
                Placeholder="Find Playlist"
                OnTextChanged="Search_OnOnTextChanged" />
        </VerticalStackLayout>
        <ScrollView
            Grid.Row="1"
            VerticalScrollBarVisibility="Never">
            <layouts:GridLayout
                x:Name="GridLayoutPlaylist"
                Columns="1"
                RowSpacing="10" />
        </ScrollView>
    </Grid>
</ContentPage>