<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:layouts="clr-namespace:maui_music_application.Views.Layouts"
             xmlns:header="clr-namespace:maui_music_application.Views.Components.Header"
             x:Class="maui_music_application.Views.Pages.HomePage"
             BackgroundColor="{DynamicResource BackgroundDark}">
    <VerticalStackLayout>
        <VerticalStackLayout
            HeightRequest="80"
            Padding="20, 20, 20, 0"
            Background="{DynamicResource BackgroundHeader}">
            <header:Header />
        </VerticalStackLayout>
        <VerticalStackLayout
            Padding="20, 0">
            <Label
                Text="Continue Listening"
                FontSize="20"
                HorizontalOptions="Fill"
                Margin="0, 0, 0, 15" />
            <layouts:GridLayout
                x:Name="KindMusic"
                Columns="2"
                ColumnSpacing="15"
                RowSpacing="15" />
            <Label
                Text="Your top mixes"
                FontSize="20"
                HorizontalOptions="Fill"
                Margin="0, 30, 0, 15" />
            <layouts:GridLayout
                x:Name="TopMixes"
                Rows="1"
                Orientation="Horizontal"
                ColumnSpacing="25" />
            <Label
                Text="Based on your recent listening"
                FontSize="20"
                HorizontalOptions="Fill"
                Margin="0, 30, 0, 15" />
            <layouts:GridLayout
                x:Name="RecentListen"
                Rows="1"
                Orientation="Horizontal"
                ColumnSpacing="25"
                Padding="0, 0, 0, 20" />
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentView>