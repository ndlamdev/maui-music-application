<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_music_application.Views.Musics.Process">
    <VerticalStackLayout
        x:Name="Layout"
        SizeChanged="Layout_OnSizeChanged"
        Padding="8, 0">
        <ProgressBar
            x:Name="ProgressBar"
            Progress="0"
            BackgroundColor="#00000000"
            HeightRequest="4"
            ProgressColor="#7CEEFF" />
        <Frame
            x:Name="DotProgressBard"
            CornerRadius="9999"
            TranslationY="-12"
            WidthRequest="4"
            HeightRequest="4"
            HorizontalOptions="Start"
            BackgroundColor="#7CEEFF"
            BorderColor="#00000000"
            />
        <FlexLayout
            TranslationY="-5">
            <Label
                Text="{Binding TextTimeProcess}"
                FontFamily="CenturyGothic"
                TextColor="#8A9A9D"
                FontSize="12" />
            <Label
                FlexLayout.Grow="1"
                x:Name="TimeEndProgressLabel"
                Text="00:00"
                FontFamily="CenturyGothic"
                TextColor="#8A9A9D"
                HorizontalOptions="End"
                FontSize="12" />
        </FlexLayout>
    </VerticalStackLayout>
</ContentView>