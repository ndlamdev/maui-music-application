<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="maui_music_application.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:maui_music_application.Pages"
    FlyoutBehavior="Disabled"
    Title="maui_music_application">
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate pages:HomePage}" />
        <ShellContent
            Title="Explore"
            Icon="search.svg"
            ContentTemplate="{DataTemplate pages:ExplorePage}" />
        <ShellContent
            Title="Library"
            Icon="folder.svg"
            ContentTemplate="{DataTemplate pages:LibraryPage}" />
    </TabBar>
</Shell>